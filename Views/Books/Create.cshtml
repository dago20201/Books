@model Book

<h1>Crear</h1>

<form asp-controller="Books" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Id" class="control-label"></label>
        <input asp-for="Id" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="titulo" class="control-label"></label>
        <input asp-for="titulo" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="autor" class="control-label"></label>
        <input asp-for="autor" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="anio" class="control-label"></label>
        <input asp-for="anio" class="form-control">
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary">
    </div>
</form>
